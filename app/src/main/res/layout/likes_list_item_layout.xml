<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#008E4A"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="170 000 km"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/list_item_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2001"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/list_item_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="082 111111"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 190 000"
                android:textColor="@android:color/white" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>





